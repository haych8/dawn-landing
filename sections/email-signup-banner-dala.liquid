</div>

{% schema %}
{
  "name": "Email Sign Up Custom",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Be the first to know when we launch.</p>",
      "label": "t:sections.email-signup-banner.blocks.paragraph.settings.paragraph.label"
    },
    {
      "type": "text",
      "id": "link_title",
      "label": "Instagram Link Title"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Instagram Link"
    },
    {
      "type": "select",
      "id": "style",
      "options": [
        {
          "value": "dala",
          "label": "Dala"
        },
        {
          "value": "no-land",
          "label": "No Land"
        },
        {
          "value": "sport-ivory",
          "label": "Sport Ivory"
        },
        {
          "value": "livrae",
          "label": "Livrae"
        }
      ],
      "default": "dala",
      "label": "Choose Style",
      "info": "Choose one of the prebuilt styles"
    }
  ],
  "presets": [
    {
      "name": "Email Sign Up - Custom"
    }
  ],
  "templates": [
    "password"
  ]
}
{% endschema %}
